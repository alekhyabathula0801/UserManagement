<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>UpdateImage</servlet-name>
        <servlet-class>com.bridgelabz.usermanagement.controller.UpdateImage</servlet-class>
        <multipart-config>
            <max-file-size>2097152 </max-file-size>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateImage</servlet-name>
        <url-pattern>/UpdateImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewUser</servlet-name>
        <servlet-class>com.bridgelabz.usermanagement.controller.NewUser</servlet-class>
        <multipart-config>
            <max-file-size>2097152 </max-file-size>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/NewUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login.jsp</servlet-name>
        <jsp-file>/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.jsp</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dashboard.jsp</servlet-name>
        <jsp-file>/pages/dashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard.jsp</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>forgot_password.jsp</servlet-name>
        <jsp-file>/pages/forgot_password.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>forgot_password.jsp</servlet-name>
        <url-pattern>/forgot_password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>new_user.jsp</servlet-name>
        <jsp-file>/pages/new_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>new_user.jsp</servlet-name>
        <url-pattern>/new_user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webpage1.jsp</servlet-name>
        <jsp-file>/pages/webpage1.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>webpage1.jsp</servlet-name>
        <url-pattern>/webpage1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webpage2.jsp</servlet-name>
        <jsp-file>/pages/webpage2.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>webpage2.jsp</servlet-name>
        <url-pattern>/webpage2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webpage3.jsp</servlet-name>
        <jsp-file>/pages/webpage3.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>webpage3.jsp</servlet-name>
        <url-pattern>/webpage3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>page_not_found.jsp</servlet-name>
        <jsp-file>/pages/page_not_found.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>page_not_found.jsp</servlet-name>
        <url-pattern>/page_not_found</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>users_list.jsp</servlet-name>
        <jsp-file>/pages/users_list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>users_list.jsp</servlet-name>
        <url-pattern>/users_list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_user.jsp</servlet-name>
        <jsp-file>/pages/update_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_user.jsp</servlet-name>
        <url-pattern>/update_user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>top_locations.jsp</servlet-name>
        <jsp-file>/pages/top_locations.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>top_locations.jsp</servlet-name>
        <url-pattern>/top_locations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profile.jsp</servlet-name>
        <jsp-file>/pages/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile.jsp</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>log4j-configuration</param-name>
        <param-value>/resources/log4j.properties</param-value>
    </context-param>

</web-app>