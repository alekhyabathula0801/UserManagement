<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/pages/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login.jsp</servlet-name>
        <jsp-file>/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.jsp</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dashboard.jsp</servlet-name>
        <jsp-file>/pages/dashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard.jsp</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>forgot_password.jsp</servlet-name>
        <jsp-file>/pages/forgot_password.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>forgot_password.jsp</servlet-name>
        <url-pattern>/forgot_password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>new_user.jsp</servlet-name>
        <jsp-file>/pages/new_user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>new_user.jsp</servlet-name>
        <url-pattern>/new_user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webpage1.jsp</servlet-name>
        <jsp-file>/pages/webpage1.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>webpage1.jsp</servlet-name>
        <url-pattern>/webpage1</url-pattern>
    </servlet-mapping>

</web-app>